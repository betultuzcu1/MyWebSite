@model CvProject.Models.Entity.Experience
@{
    ViewBag.Title = "UpdateExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">

    <div class="card-body">
        <h2>Deneyim Güncelleme</h2>
        <form method="post">
            @Html.Label("Şirket Adı")
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            <br />
            @Html.Label("Şirket Ünvan")
            @Html.TextBoxFor(x => x.Subtitle, new { @class = "form-control" })
            <br />
            @Html.Label("Açıklama")
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
            <br />
            @Html.Label("Tarih")
            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
            <br />
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>

</div>



